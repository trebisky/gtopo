#!/bin/sh

SHIPVER=0.9.2
SHIPDIR=gtopo-${SHIPVER}
SHIPTAR=${SHIPDIR}.tar.gz

rm -rf ${SHIPDIR}
mkdir ${SHIPDIR}
cp *.h *.c ${SHIPDIR}
cp Makefile ${SHIPDIR}
cp README ${SHIPDIR}
cp COPYING ${SHIPDIR}
cp INSTALL ${SHIPDIR}
cp ChangeLog ${SHIPDIR}
cp TODO ${SHIPDIR}
tar czvf ${SHIPTAR} ${SHIPDIR}
rm -rf ${SHIPDIR}

cp ${SHIPTAR} /www/cholla/gtopo/downloads
rm ${SHIPTAR}
